
<section class="season-prod">
  <div class="container">
    <div class="row prod-inner">

      <div class="col-sm-6 prod">
        <%= render partial: "featured_article", locals: {featured_article: @featured_article} if @featured_article %>
      </div><!-- /.leftcol level 1-->

      <% cache(cache_key_for_featured_products) do %> 
      <div class="col-sm-2">
        <div class="row">
          <div class="col-xs-12 prod">
            <%= render partial: "featured_product", locals: {featured_product: @featured_product[0]} if @featured_product[0] %>     
          </div>
          <div class="col-xs-12 prod">
            <%= render partial: "featured_product", locals: {featured_product: @featured_product[1]} if @featured_product[1] %>  
          </div>
          <div class="col-xs-12 prod">
            <%= render partial: "featured_product", locals: {featured_product: @featured_product[2]} if @featured_product[2] %> 
          </div><!-- /.col  -->
        </div><!-- /.row  -->
      </div><!-- /.middlecol-level 1 -->

      <div class="col-sm-4">
        <div class="row">
          <div class="col-xs-6 prod">
            <%= render partial: "featured_product", locals: {featured_product: @featured_product[3]} if @featured_product[3] %> 
          </div>
          <div class="col-xs-6 prod">
            <%= render partial: "featured_product", locals: {featured_product: @featured_product[4]} if @featured_product[4] %>     
          </div>
          <div class="col-xs-12 prod">
            <%= render partial: "featured_product", locals: {featured_product: @featured_product[5]} if @featured_product[5] %>   
          </div>
        </div>
      </div><!-- /.rightcol-level 1 -->
      <% end %>

    </div><!-- /.row -->
    <hr>
  </div><!-- /.container-fluid -->
</section>


<% if @product_slide_groups.present? %>
  <section>
    <div class="container">
      <div id="carousel-landing-page" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
          <% @product_slide_groups.each do |indicator| %>
            <%= render partial: "product_slider_indicators", locals: {indicator: indicator} %>
          <% end %>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner row" role="listbox">
          <% cache(cache_key_for_product_slide_groups) do %>
          <% @product_slide_groups.each do |group| %>
            <%= render partial: "product_slider", locals: {group: group} %>
          <% end %>
          <% end %>
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-landing-page" role="button" data-slide="prev">
          <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-landing-page" role="button" data-slide="next">
          <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <hr>
    </div>  <!-- End Container -->
  </section>
<% end %>









