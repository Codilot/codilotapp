<div class="item<%= " active" if group == @product_slide_groups.first %>">
  <% group.each do |product| %>
  <div class="col-xs-4 prod">
    <% if product.product_image? %>
      <%= link_to (image_tag(product.product_image.url)), product_path(product) %>
    <% end %>  
    <div class="carousel-caption">
      <h5><%= product.name %></h5>
    </div>
  </div>
  <% end %>
</div>