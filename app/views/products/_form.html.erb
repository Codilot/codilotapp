<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name, id: :product_name %>
  </div>

  <div class="field">
    <%= form.label :teaser %><br>
    <%= form.text_area :teaser, id: :product_teaser %>
  </div>

  <div class="field">
    <%= form.label :description %><br>
    <%= form.text_area :description, id: :product_description %>
  </div>

  <div class="field">
    <%= form.label :image_url %><br>
    <%= form.text_field :image_url, id: :product_image_url %>
  </div>

  <div class="field">
    <%= form.label :product_image %><br>
    <%= form.file_field :product_image %>
    <% if form.object.product_image? %>
      <%= image_tag form.object.product_image.thumb.url %>
      <%= form.label :remove_product_image %>
      <%= form.check_box :remove_product_image %> 
    <% end %>
  </div>

  <div class="field">
    <%= form.label :price %><br>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :colour %><br>
    <%= form.text_field :colour %>
  </div>
  
  <div class="field">
    <%= form.label :categorie_id %><br>
    <%= form.collection_select :categorie_id, Categorie.all, :id, :name, :prompt => "Select a Categorie" %>
    or create one:
    <%= form.text_field :new_categorie_name %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
