<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-6">
      <div class="form-group">
        <%= form.label :name %><br>
        <%= form.text_field :name, id: :product_name, :size => 50 %>
      </div>

      <div class="form-group">
        <%= form.label :teaser %><br>
        <%= form.text_area :teaser, id: :product_teaser, :cols => "50", :rows => "5"  %>
      </div>

      <div class="form-group">
        <%= form.label :description %><br>
        <%= form.text_area :description, id: :product_description, :cols => "50", :rows => "15" %>
      </div>

  </div>
    <div class="col-sm-6">  
      <div class="form-group">
        <%= form.label :product_image %><br>
        <%= form.file_field :product_image %>
        <% if form.object.product_image? %>
        <div class="row">
          <div class="col-sm-4">
            <br>
            <%= image_tag(product.product_image.thumb.url) %>
            <br>
          </div>
        </div>
        <div class="form-check">
          <br>
          <%= form.check_box :remove_product_image %>
          <%= form.label :remove_product_image, class: "form-check-label" %>
        </div>      
        <% end %>
      </div>
      <div class="form-group">
        <%= form.label :price %><br>
        <%= form.text_field :price %>
      </div>

      <div class="form-group">
        <%= form.label :colour %><br>
        <%= form.text_field :colour %>
      </div>

      <div class="form-group">
        <%= form.label :categorie_id %><br>
        <%= form.collection_select :categorie_id, Categorie.all, :id, :name, :prompt => "Select a Categorie" %>
        or create one:
        <%= form.text_field :new_categorie_name %>
      </div>


    </div><!-- end of col -->
    <div class="col-sm-12">
      <div class="actions">
        <%= form.submit %>
      </div>
    </div>

  </div><!-- end of row -->
<% end %>
