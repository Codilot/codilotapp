<div class="container">

  <p id="notice"><%= notice %></p>

  <h1>Products</h1>


  <div class="row prod-inner">
  
    <% @products.each do |product| %>
      <%= render partial: "shared/product", locals: {product: product} %>
    <% end %>
  
  </div>


  <% if signed_in? && current_user.admin? %>
    <div class="btn-control-group">
      <%= link_to new_product_path, class: 'btn btn-default' do %>
        <i class="glyphicon glyphicon-plus"></i> New Product
      <% end %>
    </div>
  <% end %>
</div>
