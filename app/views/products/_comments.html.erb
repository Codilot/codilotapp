<div class="product-reviews">
  <div class="row">
  <hr>
    <% @comments.each do |comment| %>
        
          <div class="col-sm-4">
              
              <p>
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                <%= comment.user.first_name %> <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small>
              </p>
              <p><%= "Rating: #{comment.rating}/5" %></p>
              <div class="rated" data-score="<%= comment.rating %>"></div>
              <p><%= comment.body %></p>
              <hr>

          </div>     
    <% end %>
    </div>
    <div class="text-center">
      <%= will_paginate @comments, previous_label: "Previous", next_label: "Next", inner_window: 1, outter_window: 0 %>
    </div>
</div>