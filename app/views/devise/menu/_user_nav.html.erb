<% if user_signed_in? %>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
      <%= current_user.first_name %>
      <span class="glyphicon glyphicon-user"></span> 
      <span class="caret"></span>
    </a>
    <ul class="dropdown-menu">
      <li>
        <%= link_to destroy_user_session_path do %>
        <span>Logout</span>
        <% end %>
      </li>
      <li><%= link_to('Your account', edit_user_path(current_user)) %></li>
      <li><%= link_to('Change login', edit_user_registration_path) %></li>
      <li><%= link_to('Your orders',  orders_path) %></li>
    </ul>
  </li> 
  <li>
    <%= link_to orders_path do %>
      <i class="glyphicon glyphicon-shopping-cart"></i>
    <% end %>
  </li>
<% else%>
  <li>
    <%= link_to new_user_session_path do %>
    <span class="glyphicon glyphicon-user"></span>
    <span class="user-nav">Login</span>
    <% end %>
  </li> 
  <li class="user-nav"><%= link_to 'Sign up', new_user_registration_path %></li>
<% end %>