
<div class= "col-sm-3 main-content main-content-gallery">
  <% if article.article_image? %> 
    <%= link_to (image_tag(article.article_image.url(:landing_page_thumb))), article_path(article) %>
  <% end %>
  <header>
    <h5 class="main-content-headline"><%= article.title %></h5>
      <% if article.subline.present? %>
        <h6 class="main-content-subline"> <%= article.subline %></h6>
      <% end %>
  </header>

  <% if signed_in? && current_user.admin? %>
  <div class="btn-group">  
    <%= link_to article, class: 'btn btn-default btn-xs' do %>
    <i class="glyphicon glyphicon-eye-open"></i>
    <% end %>

    <%= link_to edit_article_path(article), class: 'btn btn-default btn-xs' do %>
    <i class="glyphicon glyphicon-pencil"></i>
    <% end %>

    <%= link_to article, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default btn-xs' do %>
    <i class="glyphicon glyphicon-remove"></i>
    <% end %>
  </div>
  <% end %>
</div>
