<%= form_with(model: user, local: true) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="form-group">
      <%= form.label :first_name, class: "col-sm-12 control-label" %>
      <div class="form-group col-sm-12">
        <%= form.text_field :first_name, id: :user_first_name, autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :last_name, class: "col-sm-12 control-label" %> 
      <div class="form-group col-sm-12">
        <%= form.text_field :last_name, id: :user_last_name, class: "form-control" %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= form.submit "Update", class: "btn btn-lg btn-default btn-block" %>
  </div>
  <%= link_to :back, class: "btn btn-lg btn-default btn-block" do %>
    <i class="glyphicon glyphicon-arrow-left"></i>
    Back
  <% end %>
<% end %> 
 