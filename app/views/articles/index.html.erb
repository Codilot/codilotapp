<div class="container">

  <h1>Articles</h1>

  <div class="row">
    <% cache(cache_key_for_articles) do %>
      <% @articles.each do |article| %>
        <%= render partial: "shared/article", locals: {article: article} %>
      <% end %>
    <% end %>
  </div>

  <% if signed_in? && current_user.admin? %>
    <div class="btn-control-group">
      <%= link_to new_article_path, class: 'btn btn-default' do %>
        <i class="glyphicon glyphicon-plus"></i> New Article
      <% end %>
    </div>
  <% end %>


</div>
